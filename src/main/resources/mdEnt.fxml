        <TextField fx:id="tbl" layoutX="120.0" layoutY="140.0" prefWidth="200.0" style="-fx-background-color: #ffffff; -fx-border-radius: 5; -fx-border-color: #ccc; -fx-font-size: 14px; -fx-font-family: 'Arial';" />
        <TextField fx:id="idf" layoutX="120.0" layoutY="180.0" prefWidth="200.0" style="-fx-background-color: #ffffff; -fx-border-radius: 5; -fx-border-color: #ccc; -fx-font-size: 14px; -fx-font-family: 'Arial';" />
