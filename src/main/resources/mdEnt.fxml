        <Label layoutX="30.0" layoutY="65.0" style="-fx-font-size: 15px; -fx-font-family: 'Arial'; -fx-text-fill: #333333;" text="id_ent (int)" />
        <Label layoutX="45.0" layoutY="105.0" style="-fx-font-size: 15px; -fx-font-family: 'Arial'; -fx-text-fill: #333333;" text="sch" />
