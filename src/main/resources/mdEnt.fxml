        <Button fx:id="addButton" layoutX="80.0" layoutY="380.0" prefWidth="200.0" style="-fx-background-color: #FF4500	; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-family: 'Arial'; -fx-padding: 10 20;" text="Добавить запись" />

        <!-- Метка для статуса с улучшенным шрифтом -->
        <Label fx:id="statusLabel" layoutX="30.0" layoutY="429.0" prefHeight="69.0" prefWidth="308.0"
               style="-fx-font-size: 14px; -fx-font-family: 'Arial'; -fx-text-fill: #333333; -fx-wrap-text: true; -fx-alignment: center;" text="" />

    </children>
</AnchorPane>
